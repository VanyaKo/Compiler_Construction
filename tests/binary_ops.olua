class TestBinaryOperations extends EntryPoint is
    method assert(cond : Boolean): TestBinaryOperations is
        if cond.Not() then
            this.ExitCode := 1
        end
        return this
    end

    this(stdin: StdIn, stdout: StdOut, stderr: StdOut, args: Array[Array[Integer]]) is
	var a : 5 // Integer
	var b : Integer(3)
	var c : 2.5 // Real
	var d : Real(1.5)

	var resultInt : a.Plus(b)
	var resultReal : c.Plus(d)
	this := this.assert(resultInt.Equal(8))
	assert(resultReal.Equal(4.0))

	resultInt := a.Minus(b)
	resultReal := c.Minus(d) 
	this := this.assert(resultInt.Equal(2))
	this := this.assert(resultReal.Equal(1.0))

	resultInt := a.Mult(b)
	resultReal := c.Mult(d)
	this := this.assert(resultInt.Equal(15))
	this := this.assert(resultReal.Equal(3.75))

	resultInt := a.Div(b) // Expected: 1 (since it's integer division)
	resultReal := c.Div(d) // Expected: 1.666...
	this := this.assert(resultInt.Equal(1))

	var boolTrue : Boolean(true)
	var boolFalse : false

	var boolResult : boolTrue.Or(boolFalse)
	this := this.assert(boolResult.toInteger().Equal(1))
    end
end
