class A is
    var value : Integer := 42

    method displayValue() : Real is
        return this.value.toReal()
    end
end

class B extends A is
    // Method in class B
    method displayValue2() : Real is
        return this.value.Plus(10.0)
    end
end

class InheritanceTest extends EntryPoint is
    method assert(cond : Boolean) : InheritanceTest is
        if cond.Not() then
            this.ExitCode := 1
        end
        return this
    end

    this(stdin: StdIn, stdout: StdOut, stderr: StdOut, args: Array[Array[Integer]]) is
        var objA : A := A()
        var objB : B := B()
        var objBA : A := objB

        this := this.assert(objA.displayValue().Equal(42.0)) // expects 42
        this := this.assert(objB.displayValue().Equal(42.0)) // expects 42
        this := this.assert(objBA.displayValue2().Equal(52.0)) // expects 52
    end
end

