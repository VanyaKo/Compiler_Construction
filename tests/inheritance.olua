class A is
    var value : Real := 42.0

    method displayValue() : Real is
        return this.value
    end
end

class B extends A is
    // Method in class B
    method displayValue2() : Real is
        return this.value.plus(10.0)
    end
end

class InheritanceTest extends EntryPoint is
    method assert(cond : Boolean) : void is
        if cond.not() then
            this.exit_code := 1
        end
    end

    this(stdin: StdIn, stdout: StdOut, stderr: StdOut, args: Array[Array[Integer]]) is
        var objA : A := A()
        var objB : B := B()
        var objBA : A := objB

        this.assert(objA.displayValue().equal(42.0)) // expects 42
        this.assert(objB.displayValue().equal(42.0)) // expects 42
        this.assert(objBA.displayValue().equal(42.0)) // expects 42
        this.assert(objB.displayValue2().equal(52.0)) // expects 52
    end
end