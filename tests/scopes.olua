class ScopesTestClass extends EntryPoint is
    method assert(cond : Boolean) then
        if cond.Not() then
            this.ExitCode := 1
        end
    end

    this(stdin: CharInput, stdout: CharOutput, stderr: CharOutput, args: Array[Array[Integer]]) is
        ScopesTest1()
        ScopesTest2()
    end

    method ScopesTest1() is
        var a: Integer := 10
        is
            var a: Integer := 20
            // expected a = 20
            assert(a.Equal(20))
        end
        assert(a.Equal(10))
    end
    method ScopesTest1() is
        is
            var a: Integer := 20
            assert(a.Equal(20))
        end
        // accessing a here is a compiler error
    end
end