class Factorial extends EntryPoint is
    method assert(cond: Boolean): Factorial is
        if cond.Not() then
            this.ExitCode := 1
        end
        return this
    end

    method computeFactorial(n: Integer): Integer is
        var result: 1  // Initialize result
        while n.Greater(1) loop  // While n is greater than 1
            result := result.Mult(n)
            n := n.Minus(Integer(1))
        end
        return result
    end

    this(stdin: StdIn, stdout: StdOut, stderr: StdOut, args: Array[Array[Integer]]) is
        var tenFactorial: this.computeFactorial(10)
        
        // Expecting 10! to be 3628800
        this := this.assert(tenFactorial.Equal(3628800))
    end
end
